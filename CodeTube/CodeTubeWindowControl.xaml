<UserControl x:Class="CodeTube.CodeTubeWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             Name="MyToolWindow" Width="405" Height="329">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="4,4,4,4"><Run Text="Code Tube Search" Foreground="White"/></TextBlock>
            <TextBox Text="" Margin="5 ,5 ,5,5"></TextBox>
            <Button Content="Search " Click="button1_Click" Width="76" Height="20" x:Name="button1" RenderTransformOrigin="0.100,2.673"  Margin="0,5,0,0"/>
        </StackPanel>

    </Grid>
</UserControl>
